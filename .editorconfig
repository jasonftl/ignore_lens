# EditorConfig helps maintain consistent coding styles across different editors
# Visit https://editorconfig.org for more information

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# TypeScript files
[*.ts]
indent_size = 4

# JavaScript files (compiled output)
[*.js]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Batch files (Windows)
[*.bat]
end_of_line = crlf

# Ignore files (gitignore, vscodeignore, npmignore, vercelignore)
[{.gitignore,.vscodeignore,.npmignore,.vercelignore}]
indent_size = 4
